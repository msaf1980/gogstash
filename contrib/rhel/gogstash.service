[Unit]
Description=Logstash-like log collector
After=syslog.target network.target

[Service]
Type=simple
User=gogstash
Group=gogstash
EnvironmentFile=/etc/sysconfig/gogstash
ExecStart=/usr/bin/gogstash $GOGSTASH_ARGS
PIDFile=/var/run/gogstash/gogstash.pid
RuntimeDirectory=gogstash
RuntimeDirectoryMode=0755

[Install]
WantedBy=multi-user.target
